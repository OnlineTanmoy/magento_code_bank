<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="salesrep_id" type="string" />
        <attribute code="is_placedby_salesrep" type="string" />
        <attribute code="contact_person_id" type="int" />
    </extension_attributes>
    <extension_attributes for="Magento\Customer\Api\Data\CustomerInterface">
        <attribute code="contact_person" type="Magento\Customer\Api\Data\CustomerInterface[]" />
        <attribute code="company_id" type="int" />
        <attribute code="currency" type="string" />
        <attribute code="currency_code" type="string" />
    </extension_attributes>
    <extension_attributes for="Magento\Quote\Api\Data\CartItemInterface">
        <attribute code="image" type="string" />
    </extension_attributes>

    <extension_attributes for="Magento\Catalog\Api\Data\ProductInterface">
        <attribute code="custom_price" type="string" />
        <attribute code="is_in_stock" type="int" />
        <attribute code="tire_price" type="Appseconnect\B2BMage\Api\Catalog\Data\ProductTierPriceInterface[]" />
    </extension_attributes>
</config>
